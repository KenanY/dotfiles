#volume toggle
"amixer -c 1 -D pulse set Master toggle"
    m:0x0 + c:121
    XF86AudioMute 

#volume down
"amixer -c 1 set Master 5-"
    m:0x0 + c:122
    XF86AudioLowerVolume 

#volume up
"amixer -c 1 set Master 5+"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

#brightness down
"xbacklight -dec 40"
    m:0x0 + c:232
    XF86MonBrightnessDown 

#brightness up
"xbacklight -inc 40"
    m:0x0 + c:233
    XF86MonBrightnessUp 

